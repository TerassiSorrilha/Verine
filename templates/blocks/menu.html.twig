{% set menu =
    [
        {
            'title' : 'Acessos',
            'icon'  : 'person',
            'sub'   : [{
                'title' : 'Usuários',
                'path'  : 'admin_usuarios',
                'icon'  : 'person',
            },
            {
                'title' : 'Nível',
                'path'  : 'admin_niveis',
                'icon'  : 'person',
            }]
        },
        {
            'title' : 'Quadros',
            'path'  : 'admin_todo_quadros',
            'icon'  : 'person'
        },
        {
            'title' : 'Posts',
            'path'  : 'admin_index',
            'icon'  : 'person'
        },
        {
            'title' : 'FIFA',
            'icon'  : 'person',
            'sub'   : [{
                'title' : 'Ligas',
                'path'  : 'admin_ligas',
                'icon'  : 'person'
            },
            {
                'title' : 'Clubes',
                'path'  : 'admin_clubes',
                'icon'  : 'person'
            },
            {
                'title' : 'Jogadores',
                'path'  : 'admin_jogadores',
                'icon'  : 'person'
            },
            {
                'title' : 'Market',
                'path'  : 'admin_market',
                'icon'  : 'person'
            }]
        }
    ]
%}

<div class="sidebar" data-background-color="black" data-color="purple" data-image="{{ asset('adm/img/sidebar-1.jpg') }}">
    <!--
Tip 1: You can change the color of the sidebar using: data-color="purple | blue | green | orange | red"

Tip 2: you can also add an image using data-image tag
-->
    <div class="logo">
        <a href="{{ path('admin_index') }}" class="simple-text">
            Home
        </a>
    </div>
    <div class="sidebar-wrapper">
        <ul class="nav">
            {% for item in menu %}
                <li class="nav-item">
                    {% if item.sub is defined %}
                        <a class="nav-link" data-toggle="collapse" href="#{{ item.title }}">
                            <i class="material-icons">{{ item.icon }}</i>
                            <p> {{ item.title }} <b class="caret"></b></p>
                        </a>
                        <div class="collapse" id="{{ item.title }}">
                            <ul class="nav">
                                {% for subm in item.sub %}
                                    <li class="nav-item">
                                        <a class="nav-link" href="{{ path(subm.path) }}">
                                            <span class="sidebar-mini"> {{ subm.title[:1] }} </span>
                                            <span class="sidebar-normal"> {{ subm.title }} </span>
                                        </a>
                                    </li>
                                {% endfor %}
                            </ul>
                        </div>
                    {% else %}
                        <a class="nav-link" href="{{ path(item.path) }}">
                            <i class="material-icons">{{ item.icon }}</i>
                            <p>{{ item.title }}</p>
                        </a>
                    {% endif %}
                </li>
            {% endfor %}
        </ul>
    </div>
</div>