{% extends 'admin/admin_base.html.twig' %}

{% block body %}
    <div class="col-md-12">
        <div class="card">
            <div class="card-header" data-background-color="purple">
                <div class="pull-left">
                    {% if id is not defined %}
                        <h4 class="title">Novo Usuário</h4>
                    {% else %}
                        <h4 class="title">Edição</h4>
                        <p class="category">Complete seu perfil</p>
                    {% endif %}
                </div>
                <div class="nav-tabs-navigation">
                    <div class="clearfix nav-tabs-wrapper">
                        <ul class="nav nav-tabs navbar-right" data-tabs="tabs">
                            <li class="active">
                                <a href="#profile" data-toggle="tab">
                                    <i class="material-icons">bug_report</i> Bugs
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                            <li>
                                <a href="#messages" data-toggle="tab">
                                    <i class="material-icons">code</i> Website
                                    <div class="ripple-container"></div>
                                </a>
                            </li>
                            <li>
                                <a class="btn btn-white btn-round btn-just-icon retornar" href="{{ path('app_usuarioshow') }}">
                                    <i class="material-icons">keyboard_arrow_left</i>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            <div class="card-content">
                <form action="{{ path('salva_usuario') }}" method="post">
                    {% set inputs = campos %}
                    {% include 'blocks/inputs.html.twig' %}
                    <button type="submit" class="btn btn-primary pull-right">Salvar perfil</button>
                    <div class="clearfix"></div>
                </form>
            </div>
        </div>
    </div>
{% endblock %}